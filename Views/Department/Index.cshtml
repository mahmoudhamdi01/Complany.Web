@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d => d.Code)</th>
                <th>@Html.DisplayNameFor(d => d.Name)</th>
                <th>@Html.DisplayNameFor(d => d.CreateAt)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

           </tr>
        </thead>
        <tbody>
            @foreach(var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.CreateAt</td>
                    <td>
                        <a asp-action="Details" asp-action="department.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Details" asp-action="department.Id" class="btn btn-success">
                            <i class="fas fa-eye"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Details" asp-action="department.Id" class="btn btn-danger">
                            <i class="fas fa-eye"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is no Department</h3>
    </div>
}
